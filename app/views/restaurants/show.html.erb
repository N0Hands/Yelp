<header class="yelpheader"><a href="/">Yelp!</a>Fake-ass food from companies that hate you.</header>



<center><h1><%= @restaurant.title %></h1></center>

	<div class="individual_review">
	<% @restaurant.reviews.each do |review| %>
	  <p><%= review.reviewcontent %></p>
	<% end %>
	</div>


	<div class="create_review">
		<%= form_for [@restaurant, Review.new] do |g| %>
			<%= g.label :reviewcontent, "Add your own review of this restaurant:" %>
			<%= g.text_field :reviewcontent %>
		
			<%= g.submit %>
		<% end %>
	</div>

