<% @restaurants.each do |restaurant| %>

  <ul><%= link_to restaurant.title, restaurant %></ul>

<% end %>

<div class="create_restaurant">
<%= form_for Restaurant.new do |f| %>
	<% f.label :title %> 
	<%= f.text_field :title, placeholder: 'Restaurant Name' %>

	<%= f.submit %>
<% end %>
</div>


